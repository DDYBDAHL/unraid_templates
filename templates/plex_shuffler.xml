<?xml version="1.0"?>
<Container version="2">
    <Name>Plex Shuffler</Name>
    <Repository>douwjacobs/plex-shuffler:latest</Repository>
    <Registry>https://hub.docker.com/r/douwjacobs/plex-shuffler</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Branch>
        <Tag>development</Tag>
        <TagDescription>Latest development release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:3210]</WebUI>
    <Privileged>false</Privileged>
    <Support>https://github.com/DouwJacobs/plex-shuffler/issues</Support>
    <Project>https://plex-shuffler.gitbook.io/plex-shuffler</Project>
    <Overview>Create a TV-like experience on Plex with shuffled playlists</Overview>
    <Beta>False</Beta>
    <Category>MediaApp:Video MediaServer:Video Other: Tools: Status:Stable</Category>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/plex-shuffler-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/plex_shuffler.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2024-09-02

        Initial release
    </Changes>
    <Config Name="Web UI Port" Target="3210" Default="3210" Mode="tcp" Description="Container Port: 3210" Type="Port" Display="always" Required="true" Mask="false">3210</Config>
    <Config Name="Config path" Target="/app/config" Default="/mnt/user/appdata/plex_shuffler/config" Mode="rw" Description="Storage for config files" Type="Path" Display="advanced-hide" Required="true" Mask="false">/mnt/user/appdata/plex_shuffler/config</Config>
</Container>
