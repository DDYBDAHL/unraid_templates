<?xml version="1.0"?>
<Container version="2">
    <Name>TitleCardMaker</Name>
    <Repository>collinheist/titlecardmaker:latest</Repository>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Branch>
        <Tag>develop</Tag>
        <TagDescription>Latest development release</TagDescription>
    </Branch>
    <Registry>https://hub.docker.com/r/collinheist/titlecardmaker</Registry>
    <Network>bridge</Network>
    <Privileged>false</Privileged>/
    <Support>https://github.com/CollinHeist/TitleCardMaker/issues</Support>
    <Project>https://titlecardmaker.com</Project>
    <Overview>Automated title card maker for Plex, Jellyfin, and Emby</Overview>
    <Beta>False</Beta>
    <Category>MediaApp:Video MediaServer:Video Other: Tools: Status:Stable</Category>
    <ExtraSearchTerms>images cards shows seasons episodes series Plex Emby Jellyfin automation Kometa ImageMaid</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/title-card-maker-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/title_card_maker.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2024-07-10

        Initial release
    </Changes>
    <Requires>
        Container requires a preferences.yml file in the Config Path directory. See documentation for details: https://github.com/CollinHeist/TitleCardMaker/wiki/Configuring-the-TitleCardMaker#simple-docker-example&#xD;
    </Requires>
    <Config Name="Start time" Target="TCM_RUNTIME" Default="00:00" Description="Time to start the initial run (24-hour/military time)" Type="Variable" Display="always" Required="true" Mask="false">00:00</Config>
    <Config Name="Run interval" Target="TCM_FREQUENCY" Default="12h" Description="How often to run the service. (s - seconds, m - minutes, h - hours, d - days, w - weeks)" Type="Variable" Display="always" Required="true" Mask="false">12h</Config>
    <Config Name="Tautulli update file path" Target="/tautulli" Default="" Mode="rw" Description="Path to directory containing Tautulli update file. Required for Tautulli update file variable below. Delete this if not used." Type="Path" Display="always" Required="false" Mask="false" />
    <Config Name="Tautulli update file" Target="TCM_TAUTULLI_UPDATE_LIST" Default="/tautulli/update.txt" Description="Path to Tautulli update file inside the container. Requires path above to be set if used. Delete this if not used. See documentation for details: https://github.com/CollinHeist/TitleCardMaker/wiki/Tautulli-Integration" Type="Variable" Display="always" Required="false" Mask="false">/tautulli/update.txt</Config>
    <Config Name="Tautulli update frequency" Target="TCM_TAUTULLI_UPDATE_FREQUENCY" Default="" Description="How often to update the Tautulli update file. (s - seconds, m - minutes, h - hours, d - days, w - weeks). Requires path above to be set if used. Delete this if not used." Type="Variable" Display="always" Required="false" Mask="false" />
    <Config Name="Media Path" Target="/media" Default="" Mode="rw" Description="Path to media folders. See documentation for details: https://github.com/CollinHeist/TitleCardMaker/wiki/Docker-Tutorial#step-3-identifying-your-media-directories" Type="Path" Display="always" Required="true" Mask="false" />
    <Config Name="Config Path" Target="/config" Default="/mnt/user/appdata/title_card_maker/config" Mode="rw" Description="Path to directory containing configuration files" Type="Path" Display="advanced" Required="true" Mask="false">/mnt/user/appdata/title_card_maker/config</Config>
    <Config Name="Log Path" Target="/maker/logs" Default="/mnt/user/appdata/title_card_maker/logs" Mode="rw" Description="Path to directory containing log files" Type="Path" Display="advanced" Required="true" Mask="false">/mnt/user/appdata/title_card_maker/logs</Config>
    <Config Name="Preferences file path" Target="TCM_PREFERENCES" Default="/config/preferences.yml" Description="Path to preferences file inside the container" Type="Variable" Display="advanced-hide" Required="true" Mask="false">/config/preferences.yml</Config>
    <Config Name="Missing file path" Target="TCM_MISSING" Default="/config/missing.yml" Description="Path to missing assets file inside the container" Type="Variable" Display="advanced-hide" Required="true" Mask="false">/config/missing.yml</Config>
    <Config Name="Log level" Target="TCM_LOG" Default="INFO|DEBUG|WARNING|ERROR|CRITICAL" Description="Log level for the service" Type="Variable" Display="advanced-hide" Required="true" Mask="false">INFO</Config>
    <Config Name="PUID" Target="PUID" Default="099" Description="User ID for all created files" Type="Variable" Display="advanced-hide" Required="true" Mask="false">099</Config>
    <Config Name="PGID" Target="PGID" Default="100" Description="Group ID for all created files" Type="Variable" Display="advanced-hide" Required="true" Mask="false">100</Config>
    <Config Name="UMASK" Target="UMASK" Default="002" Description="File mask for all created files" Type="Variable" Display="advanced-hide" Required="true" Mask="false">002</Config>
</Container>
